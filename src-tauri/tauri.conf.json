{
    "build": {
        "beforeDevCommand": "yarn dev",
        "beforeBuildCommand": "yarn build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist"
    },
    "package": {
        "productName": "Grind Reminder",
        "version": "1.0.2"
    },
    "tauri": {
        "updater": {
            "active": true,
            "endpoints": [
                "https://releases.myapp.com/{{target}}/{{arch}}/{{current_version}}"
            ],
            "dialog": true,
            "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEIyQzEzNkVDMDMzMjE3RjYKUldUMkZ6SUQ3RGJCc3JkaGFhbUhucDZuOGk5MU1aaDBDOVRmUUZ0WWtmanhxQ2Yxa3R0R3NFbzUK",
            "windows": {
                "installMode": "passive"
            }
        },
        "allowlist": {
            "all": false,
            "shell": {
                "all": false,
                "open": true
            }
        },
        "windows": [
            {
                "title": "Grind Reminder",
                "width": 600,
                "height": 700,
                "resizable": true
            }
        ],
        "security": {
            "csp": null
        },
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "com.lp.dev",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ]
        }
    }
}
